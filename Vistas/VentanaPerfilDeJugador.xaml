<Page x:Class="Cliente.Vistas.VentanaPerfilDeJugador"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cliente.Vistas"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280">

    <DockPanel>
        <Border CornerRadius="20">
            <Border.Background>
                <ImageBrush ImageSource="pack://application:,,,/Imagenes/Fondos/fondo.png" Stretch="UniformToFill" />
            </Border.Background>

            <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Height="592" Width="918">
                <Label Content="Nombre del Jugador" Background="#6c6c6c" Foreground="White" 
                       FontWeight="Bold" FontSize="45" HorizontalAlignment="Center" VerticalAlignment="Top" 
                       Margin="0,20,0,0" Padding="10" BorderBrush="Transparent" Width="483" />

                <Image Source="/Imagenes/Fondos/peppo.png" Width="192" Height="168" Margin="0,105,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" />

                <Label Content="Correo:" Background="#3b92c4" Foreground="Beige" 
                       FontWeight="Bold" FontSize="25" HorizontalAlignment="Left" VerticalAlignment="Top" 
                       Margin="80,300,0,0" Width="150" />
                <TextBlock x:Name="Txb_Correo" Foreground="White" FontSize="25" 
                         Margin="256,300,123,0" VerticalAlignment="Top" Height="40" Background="#35446b" Text=""/>

                <Label Content="Descripción:" Background="#3b92c4" Foreground="Beige" 
                       FontWeight="Bold" FontSize="25" HorizontalAlignment="Left" VerticalAlignment="Top" 
                       Margin="80,380,0,0" Width="150" />
                <TextBlock x:Name="Txb_Descripcion" Foreground="White" FontSize="25" 
                         Margin="256,380,123,0" VerticalAlignment="Top" Height="80" TextWrapping="Wrap" Background="#35446b" Text="" />

                <Button Content="Aceptar" Width="150" Height="50" Background="LightGreen" Foreground="White" 
                        FontWeight="Bold" FontSize="25" BorderThickness="0" HorizontalAlignment="Center" 
                        Margin="0,480,0,0" VerticalAlignment="Top" Click="AceptarClick">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="10" BorderThickness="0">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Effect>
                        <DropShadowEffect Color="Black" ShadowDepth="3" Opacity="0.5" BlurRadius="10"/>
                    </Button.Effect>
                </Button>

            </Grid>
        </Border>
    </DockPanel>
</Page>
