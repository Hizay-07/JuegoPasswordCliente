<Page x:Class="Cliente.Vistas.VentanaInicioSesion"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cliente.Vistas"
      xmlns:p="clr-namespace:Cliente.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="{x:Static p:Resources.Title_InicioSesion}">

    <DockPanel>
        <Grid>
            <Border RenderTransformOrigin="0.586,0.526">
                <Border.Background>
                    <ImageBrush ImageSource="/Imagenes/Fondos/fondo.png" Stretch="UniformToFill" />
                </Border.Background>

                <Label Content="{x:Static p:Resources.Title_InicioSesion}"
                       Background="#6c6c6c"
                       Foreground="White"
                       FontWeight="Bold"
                       FontSize="30" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Margin="0,46,0,0" />

            </Border>

            <!-- Centrar el Grid que contiene los elementos -->
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Height="223" Width="519">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Correo Label y TextBox -->
                <Label Content="{x:Static p:Resources.Lbl_CorreoGlobal}"
                       Background="#3b92c4"
                       Foreground="Beige"
                       FontWeight="Bold"
                       FontSize="18"
                       Grid.Row="0" Grid.Column="0" 
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Padding="5" 
                       Margin="10"/>

                <TextBox x:Name="Txb_Correo"
                         Grid.Column="1"
                         Foreground="Black"
                         FontSize="18" 
                         VerticalAlignment="Center"
                         Margin="10,0,0,0" />

                <!-- Contraseña Label y TextBox -->
                <Label Content="{x:Static p:Resources.Lbl_ContraseñaGlobal}"
                       Background="#3b92c4"
                       Foreground="Beige"
                       FontWeight="Bold"
                       FontSize="18" 
                       Grid.Row="1" Grid.Column="0" 
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Padding="5"
                       Margin="10"/>

                <TextBox Name="Txb_Contrasenia"
                         Grid.Row="1" Grid.Column="1"
                         Foreground="Black" 
                         FontSize="18" 
                         VerticalAlignment="Center"
                         Margin="10,0,0,0" />

                <!-- Botones Aceptar y Cancelar -->
                <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0"/>

                <!-- Botón Olvide mi Contraseña -->
                <Button Content="{x:Static p:Resources.Btn_OlvideMiContrasena}" 
                        Grid.Row="2" 
                        Grid.Column="1"
                        Height="30" 
                        Background="Gray" 
                        Foreground="White" 
                        FontWeight="Bold" 
                        FontSize="12" 
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="259,0,0,0" 
                        Grid.RowSpan="2" 
                        Width="135">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10" 
                                BorderThickness="0">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>

                </Button>
                <Button Content="{x:Static p:Resources.Btn_CancelarGlobal}" 
                        Background="Red" 
                        Foreground="White" 
                        FontWeight="Bold" 
                        FontSize="16" 
                        Margin="173,18,101,27"
                        Click="CancelarInicioDeSesion" 
                        Grid.Column="1" 
                        Grid.Row="3">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10" 
                                BorderThickness="0">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>

                </Button>
                <Button Content="{x:Static p:Resources.Btn_AceptarGlobal}" 
                        Background="LightGreen" 
                        Foreground="White" 
                        FontWeight="Bold" 
                        FontSize="16" 
                        Click="AceptarInicioDeSesion" 
                        Margin="15,18,259,27" 
                        Grid.Row="3" 
                        Grid.Column="1">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10" 
                                BorderThickness="0">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>


            </Grid>
        </Grid>
    </DockPanel>
</Page>
